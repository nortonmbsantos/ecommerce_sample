<div class="table-responsive-xl">
  <table class="table">
<thead>
<tr>
<th>Name</th>
<th>Price</th>
<th>Quantity</th>
<th>Category</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @products.each do |p| %>
<tr>
<td><%= p.name %></td>
<td><%= p.price %></td>
<td><%= p.quantity %></td>
<td><%= p.category_name %></td>
<td>
<div class="btn-group float-right" role="group" aria-label="Basic example">
  <%= link_to 'Edit', edit_admin_product_path(p), class: 'btn btn-success float-right' %>
  <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger float-right' %>
</div>
</td>
</tr>
<% end %>
</tbody>    
  </table>
</div>
<br>

